---
layout: base.njk
title: "{{ title }}"
date: "{{ page.date | w3DateFilter }}"
---

<article class="post">
  <header class="post-header">
    <h1 class="post-title">{{ title }}</h1>
    <div class="post-meta">
      <time datetime="{{ page.date | w3DateFilter }}" class="post-date">
        {{ page.date | dateDisplay }}
      </time>
      {% if categories %}
        <span class="post-categories">
          {% for category in categories %}
            <a href="/category/{{ category | slugify }}/">{{ category }}</a>
            {% if not loop.last %}, {% endif %}
          {% endfor %}
        </span>
      {% endif %}
    </div>
  </header>

  {% if image %}
    <div class="post-image">
      <img src="{{ image }}" alt="{{ title }}" />
    </div>
  {% endif %}

  <div class="post-content">
    {{ content | safe }}
  </div>

  {% if tags %}
    <div class="post-tags">
      {% for tag in tags %}
        <a href="/tag/{{ tag | slugify }}/" class="post-tag">#{{ tag }}</a>
      {% endfor %}
    </div>
  {% endif %}
</article>
